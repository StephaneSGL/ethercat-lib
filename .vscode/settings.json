{
    /* ============================================================================================================================ */
    /* ----------------------------------------------------- General Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Terminal settings
    // "terminal.integrated.fontSize": 17,
    "terminal.integrated.scrollback": 50000,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Search Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Excluded directories
    "files.exclude": {
        "${workspaceFolder}/build/**": true,
        "${workspaceFolder}/log/**": true,
    },
    // Exclude files from watcher
    "files.watcherExclude": {
        "${workspaceFolder}/build/**": true,
        "${workspaceFolder}/log/**": true,
    },
    // Exculde files from C/C++ code analysis
    "C_Cpp.files.exclude": {
        "${workspaceFolder}/install/**": true,
    },

    // Search settings
    "search.useIgnoreFiles": false,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Editor Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */
    // Words-wrap
    "editor.wordWrap": "off",
    
    // Intendation
    "editor.detectIndentation": false,
    "editor.autoIndent": "full",
    "editor.tabSize": 4,

    /* ============================================================================================================================ */
    /* ------------------------------------------------------- ROS Settings ------------------------------------------------------- */
    /* ============================================================================================================================ */

    // Ros parameters
    "ros.distro": "humble",

    /* ============================================================================================================================ */
    /* ------------------------------------------------------ Visual Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Custom icons (@note ${workspaceFolder is not expanded here})
    "vsicons.customIconFolderPath": "./.vscode",
    // Icons
    "vsicons.associations.files": [
        { "icon": "config",       "extensions": ["clang-format"], "format": "svg" },
    ],
    "vsicons.associations.folders": [
        { "icon": "plugin",       "extensions": ["extern", "dep"], "format": "svg" },
    ],

    /* ============================================================================================================================ */
    /* ---------------------------------------------------- Formatting Settings --------------------------------------------------- */
    /* ============================================================================================================================ */

    // Clang-format config
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    // Clang-format config [C/C++]
    "[c][cpp]": {
        "editor.formatOnType": false,
        "editor.formatOnSave": false,
        "editor.formatOnSaveMode": "file",
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    // Header's configuration
    "psi-header.config": {
        "forceToTop": true,
        "initials": "K.P.",
        "author": "Krzysztof Pierczyk",
        "blankLinesAfter": 1,
        "authorEmail": "krzysztof.pierczyk@gmail.com",
        "creationDateZero": "asIs"
    },

    // Header's tracking configuration
    "psi-header.changes-tracking": {
        "isActive": true,
        "modDate": "@modified",
        "modDateFormat": "dd-MM-yyyy hh:nn:ss",
        "enforceHeader": false,
        "autoHeader": "off",
        "updateLicenseVariables": true,
    },

    // Custom variables
    "psi-header.variables": [
        ["projectname", "ethercat-lib"]
    ],

    // Language configuration
    "psi-header.lang-config": [
        {
            "language": "cpp",
            "begin": "/* ============================================================================================================================ *//**",
            "end": " */// ============================================================================================================================= */",
            "prefix": " * ",
            "afterHeader": [
                "#ifndef ___H__",
                "#define ___H__",
                "",
                "/* =========================================================== Includes =========================================================== */",
                "",
                "",
                "",
                "/* ============================================================= Doc ============================================================== */",
                "",
                "/**",
                " * @addtogroup ",
                " * @{",
                " */",
                "",
                "/* ========================================================== Namespaces ========================================================== */",
                "",
                "namespace {",
                "",
                "/* ================================================================================================================================ */",
                "",
                "} // End namespace",
                "",
                "/* ================================================================================================================================ */",
                "",
                "/**",
                " * @}",
                " */",
                "",
                "/* ================================================================================================================================ */",
                "",
                "#endif",
            ]
        },
        {
            "language": "c",
            "mapTo": "cpp"
        },
        {
            "language": "cmake",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
        },
        {
            "language": "shellscript",
            "mapTo": "cmake"
        },
        {
            "language": "python",
            "begin": "# ====================================================================================================================================",
            "end": "# ====================================================================================================================================",
            "prefix": "# ",
            "afterHeader": [
                "# ============================================================== Doc =============================================================== #",
                "",
                "\"\"\" ",
                "",
                ".. module:: ",
                "   :platform: Unix",
                "   :synopsis: ",
                "",
                ".. moduleauthor:: <<author>> <<<authoremail>>>",
                "",
                "\"\"\"",
                "",
                "# ============================================================ Imports ============================================================= #",
                "",
                "",
                "",
                "# ============================================================ Script ============================================================== #",
                "",
                "",
                "",
                "# ================================================================================================================================== #",
            ]
        },
        {
            "language": "xml",
            "begin": "<!-- =================================================================================================================================",
            "end": "  - ================================================================================================================================== -->",
            "prefix": "  - "
        },
    ],

    // Templates configuration
    "psi-header.templates": [
        {
            "language": "cpp",
            "template": [
                "@file       <<filename>>",
                "@author     <<author>> (<<authoremail>>)",
                "@maintainer <<author>> (<<authoremail>>)",
                "@date       <<filecreated('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@modified   <<dateformat('dddd, Do MMMM YYYY h:mm:ss a')>>",
                "@project    <<projectname>>",
                "@brief      ",
                "",
                "",
                "@copyright <<author>> Â© <<year>>"
            ]
        },
        {
            "language": "c",
            "mapTo": "cpp"
        },
        {
            "language": "cmake",
            "mapTo": "cpp"
        },
        {
            "language": "python",
            "mapTo": "cpp"
        },
        {
            "language": "shellscript",
            "mapTo": "cpp"
        },
        {
            "language": "xml",
            "mapTo": "cpp"
        },
    ],

    // Comment divider
    "comment-divider" : {
        "length" : 134,
        "shouldLengthIncludeIndent" : true,
        // Main header
        "mainHeaderFiller" : "=",
        "mainHeaderHeight" : "block",
        "mainHeaderAlign" : "center",
        // Subheader
        "subheaderFiller" : "=",
        "subheaderHeight" : "line",
        "subheaderAlign" : "center",
        // Sold line
        "lineFiller" : "=",
        // Language map
        "languagesMap" : {
            "python" :  [ "#", "#" ],
            "shellscript" :  [ "#", "#" ],
            "cmake" :  [ "#", "#" ],
            "cpp" :  [ "/*", "*/" ],
            "jsonc" :  [ "/*", "*/" ],
        },
    },
        
    /* ============================================================================================================================ */
    /* ------------------------------------------------------- Other Settings ----------------------------------------------------- */
    /* ============================================================================================================================ */

    // Files associations
    "files.associations": {
        ".clang-format": "yaml",
        "Doxyfile": "shellscript",
        "*.doxygen": "shellscript",
        "*.doxygen.in": "shellscript",
        "*.doxyfile": "shellscript",
        "*.doxyfile.in": "shellscript",
        "*.cmake.in": "cmake",
        "chrono": "cpp"
    },

}